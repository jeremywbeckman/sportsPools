<script type="text/ng-template" id="/login.html">
   <div class="page-header">
      <h1>Login to play</h1>
   </div>
   <form ng-submit="login()">
      <div class="form-group">
         <input type="text" class="form-control" maxlength="80" placeholder="Username" ng-model=user.username"/>
      </div>
      <div class="form-group">
         <input type="password" class="form-control" maxlength="30" placeholder="Password" ng-model="user.password"/>
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
   </form>
</script>